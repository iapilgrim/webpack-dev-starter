@import '../mixins/icon.scss';

.root {
  border-width: 2px;
  border-style: solid;
  border-color: #777;
  padding: 0 20px;
  margin: 0 6px;
  max-width: 400px;
}

.serif-font {
  font-family: Georgia, serif;
}

.text {
  color: #777;
  font-size: 24px;
  composes: serif-font; /* compose */
  font-weight: 600;
  @media (max-width: 320px) {
    font-size: 32px;
  }
}

.check {
  @extend .icon;
  background-image: url("../icons/check.svg");
}